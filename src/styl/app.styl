@import '~normalize'
@import './fonts.styl'
@import '~settings'
@import './transitions.styl'
body
	font-family "helveticaLT", "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
	font-weight 300
	& *
		font-family "helveticaLT", "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
		font-weight 300
		box-sizing border-box
		font-style normal
// COMMON STYLES
a,button
	&:focus, &:active
		outline 0
	&:visited, &:link, &:-webkit-any-link
		color #fff
.backdrop
	position absolute
	background rgba(#2f2f2f, 0.97)
	width 100%
	z-index 99999
	left 0
	top 100%
	padding-top 10vh
	padding-bottom 49%
	overflow hidden
.btn
	font-size 18px
	line-height 50px
	color #fff
	border 1px solid #01cefd
	padding 0 20px
	background none
	cursor pointer
	white-space nowrap
	@media (max-width:breaks.small)
		padding 0 15px
.no-items h4, h4.no-items
	display inline-block
	vertical-align middle
	width 99%
	text-align center
	font-size 28px
	font-weight 300
	pointer-events none
.circle-item
	background-position 50% 50%
	background-size 105%
	background-repeat no-repeat
	border-radius 50%
	overflow hidden
	margin 0 auto
	box-shadow 2px 2px 8px rgba(0,0,0,0.2)
	background-color #2e2e2e
.item-small
	width 198px
	height 198px
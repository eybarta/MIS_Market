// COLORS
blue = #01cefd
lightgray = #d0d0d0
darkgray = #464646
txtgray = #bcbcbd


// breakpoints
breaks = {
	min: 768px,
	small: 1024px,
	med: 1200px,
	big: 1600px,
	max: 1880px
}

// mixins
fontsizer(min = 13px, max = 24px, rangemin = breaks.min, rangemax = breaks.max)
	font-size responsive min max
	font-range rangemin rangemax

responsify(prop, min, max, range=[breaks.min..breaks.max])
	for key, value in range
		@media (min-width:value)
			prop: min


$inline-mid
	& > *:not(.not-me)
		display inline-block
		vertical-align middle
	&:before
		display inline-block
		vertical-align middle
		content ''
		height 100%


$absolute-mid
	position relative
	& > *:first-child
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)

$zero
	padding 0
	margin 0

$sharpen
	-webkit-font-smoothing antialiased
	text-shadow 1px 1px 1px rgba(0,0,0,0.18)
	-moz-osx-font-smoothing grayscale
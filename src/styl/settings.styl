$inline-mid
	& > *:not(.not-me)
		display inline-block
		vertical-align middle
	&:before
		display inline-block
		vertical-align middle
		content ''
		height 100%


$absolute-mid
	position relative
	& > *:first-child
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)

$zero
	padding 0
	margin 0